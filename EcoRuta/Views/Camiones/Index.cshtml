@model List<Application.ViewModels.Camiones.CamionViewModel>

@{
    ViewData["Title"] = "Camiones";
}

<head>
    <style>
        .row{
        margin-top: 30px;
        }

        .crearbtn{
        margin-top: 30px;
        text-align: center;
        }

        .form-btn{
        display: flex;
        }

        body {
        background-color: #f3e3b2;
        }

        .card {
        border: 1px solid black;
        }

        .footer {
        margin-top: 100px;
        }
    </style>
</head>

<div class="crearbtn">
    <a class="btn btn-primary" asp-controller="Camiones" asp-action="CreateCamion">Agregar Camión</a>
</div>

<div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @try
        {
            if (Model != null)
            {
                @foreach (var obj in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-body">

                                <p>Placa: @obj.Placa</p>
                                <p>Modelo: @obj.Modelo</p>
                                <p>Año: @obj.Año</p>


                                <div class="form-btn">
                                    <form asp-controller="Camiones" asp-action="EditCamion" method="post">
                                        <input type="hidden" name="Id" value="@obj.CamionId" />
                                        <button class="btn btn-warning" type="submit">Editar</button>
                                    </form>
                                    <form asp-controller="Camiones" asp-action="DeleteCamion" method="post">
                                        <input type="hidden" name="Id" value="@obj.CamionId" />
                                        <button class="btn btn-danger" type="submit">Eliminar</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h2>No se encontraron camiones</h2>
            }

        }
        catch (Exception ex)
        {
            <h2>Error: @ex</h2>
        }
    </div>
</div>