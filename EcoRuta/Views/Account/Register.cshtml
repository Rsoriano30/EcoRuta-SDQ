@using Application.ViewModels.Usuarios
@model RegisterViewModel

@{
    ViewData["Title"] = "Registro";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoRuta</title>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="login-page">
        <div class="login-container">
            <div class="login-form-section">
                <div class="logo-section">
                    <h1>Registro</h1>
                    <p>Crea tu cuenta</p>
                </div>
                <form asp-controller="Account" asp-action="Register" method="post">
                    <div class="form-group">
                        <label asp-for="TipoUsuario">Tipo de usuario</label>
                        <select asp-for="TipoUsuario">
                            <option value="Usuario">Usuario</option>
                            <option value="Administrador">Administrador</option>
                        </select>
                        <span asp-validation-for="TipoUsuario" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nombre">Nombre:</label>
                        <input asp-for="Nombre" type="text" placeholder="Tu nombre" />
                        <span asp-validation-for="Nombre" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido">Apellido:</label>
                        <input asp-for="Apellido" type="text" placeholder="Tu apellido" />
                        <span asp-validation-for="Apellido" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Correo">Correo:</label>
                        <input asp-for="Correo" type="email" placeholder="ejemplo@email.com" />
                        <span asp-validation-for="Correo" class="error-message"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Contraseña">Contraseña:</label>
                        <input asp-for="Contraseña" type="password" placeholder="********" />
                        <span asp-validation-for="Contraseña" class="error-message"></span>
                    </div>
                    <button class="login-button" type="submit">
                        Crear Cuenta
                        <span class="loading"></span>
                    </button>
                    <div class="register-link">
                        <a asp-action="Login">← Volver al inicio de sesión</a>
                    </div>
                </form>
            </div>
            <div class="login-image-section">
                <div class="eco-illustration">
                    <div class="eco-icon">🌱</div>
                    <div class="eco-text">
                        <h3>Bienvenido</h3>
                        <p>Únete y ayuda a cuidar el planeta</p>
                    </div>
                    <div class="background-elements"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>