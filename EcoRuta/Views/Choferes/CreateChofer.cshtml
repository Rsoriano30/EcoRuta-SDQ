@using Application.ViewModels.Choferes
@model ChoferSaveViewModel

@{
    ViewData["title"] = "Crear";
}

<head>
    <style>
        body {
            background-color: #f3e3b2;
        }

        .card {
            border: 1px solid black;
            margin-top: 100px;
            width: 400px;
        }

        .footer {
            margin-top: 190px;
        }
    </style>
</head>

<div class="card col-4 offset-4">
    <div class="card-body">
        <form asp-controller="Choferes" asp-action="CreateChoferPost" method="post">

            <label asp-for="Nombre">Nombre:</label>
            <input class="form-control" type="text" asp-for="Nombre" required />

            <label asp-for="Cedula">Cédula:</label>
            <input class="form-control" type="text" asp-for="Cedula" required />

            <div>
                <br />
                <button class="btn btn-success" type="submit">Crear</button>
                <a class="btn btn-danger" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>