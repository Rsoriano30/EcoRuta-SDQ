@model Application.ViewModels.Admin.EstadisticasDashboardViewModel

@{
    ViewData["Title"] = "Dashboard Administrador";
}

<html>
    <head>

        <style>
            /* Fondo general */
            body {
                background-color: #f8fafc;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            }

            /* Título principal */
            h2 {
                text-align: center;
                font-weight: 700;
                color: #4CAF50;
                margin-bottom: 40px;
                margin-top: 50px;
            }

            /* Card general */
            .card {
                border-radius: 16px;
                box-shadow: 0 8px 20px rgba(0,0,0,0.08);
                border: none;
                overflow: hidden;
                background: white;
                transition: transform 0.2s ease-in-out;
            }

            .card:hover {
                transform: translateY(-4px);
            }

            /* Título dentro de la card */
            .card-title {
                font-weight: 600;
                font-size: 1.4rem;
                color: #0f172a;
                border-bottom: 2px solid #e2e8f0;
                padding-bottom: 10px;
                margin-bottom: 15px;
            }

            /* Lista de estadísticas */
            .list-group-item {
                font-size: 1.1rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
                background: transparent;
                border: none;
                padding: 14px 18px;
                transition: background 0.2s ease-in-out;
                flex-wrap: wrap;
            }

                .list-group-item:hover {
                    background: #f1f5f9;
                }

                /* Números */
                .list-group-item strong {
                    font-size: 1.4rem;
                    font-weight: bold;
                    color: #4CAF50;
                    ;
                }

            @@media (max-width: 768px) {
                h2

            {
                font-size: 1.4rem;
            }

            .card {
                margin: 10px;
                padding: 0;
            }

            .list-group-item {
                flex-direction: column;
                align-items: flex-start;
                text-align: left;
            }

                .list-group-item strong {
                    margin-top: 6px;
                    font-size: 1.2rem;
                }

            }


            @@media (max-width: 576px) {
                .list-group-item

            {
                flex-direction: column;
                align-items: flex-start;
            }

            .list-group-item strong {
                margin-top: 5px;
            }

            }
        </style>


    </head>
    <body>
        <h2 class="mt-4 mb-4">Dashboard del Administrador</h2>

        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">Estadísticas del Sistema</h4>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Total de Usuarios:</span>
                        <strong>@Model.TotalUsuarios</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Administradores:</span>
                        <strong>@Model.TotalAdministradores</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Usuarios Regulares:</span>
                        <strong>@Model.TotalRutas</strong>
                </ul>
            </div>
        </div>
    </body>
</html>