@using Application.ViewModels.Rutas
@model RutaSaveViewModel

@{
    ViewData["title"] = "Crear";
    <link rel="stylesheet" href="~/css/responsive.css"/>
}

<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #ffffff;
            min-height: 100vh;
        }

        .card {
            background-color: #f4fef4;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.12);
            max-width: 450px;
            margin: 100px auto;
            padding: 25px;
            color: #333;
        }

        label {
            font-weight: 500;
            margin-top: 15px;
            display: block;
        }

        .form-control {
            border-radius: 6px;
            border: 1px solid #ccc;
            padding: 8px 12px;
            width: 100%;
            margin-bottom: 10px;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn-success {
            background-color: #2e7d32;
            color: white;
            padding: 10px 18px;
            border: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            font-size: 17px;
        }

            .btn-success:hover {
                background-color: #1b5e20;
            }

        .btn-danger {
            background-color: #e53935;
            color: white;
            padding: 10px 18px;
            border: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
            text-decoration: none;
            font-size: 15px;

        }

            .btn-danger:hover {
                background-color: #c62828;
            }

        .footer {
            margin-top: 190px;
            text-align: center;
            color: #ccc;
        }
    </style>
</head>

<div class="card col-4 offset-4">
    <div class="card-body">
        <form asp-controller="Rutas" asp-action="CreateRutaPost" method="post">

            <label asp-for="NombreRuta">Nombre:</label>
            <input class="form-control" type="text" asp-for="NombreRuta" required />

            <label asp-for="PuntoInicio">Punto de partida:</label>
            <input class="form-control" type="text" asp-for="PuntoInicio" required />

            <label asp-for="PuntoFinal">Destino:</label>
            <input class="form-control" type="text" asp-for="PuntoFinal" required />

            <label asp-for="Estado">Estado:</label>
            <select class="form-control" asp-for="Estado" required>
                <option value="@(true)">Activa</option>
                <option value="@(false)">Inactiva</option>
            </select>

            <div>
                <br />
                <button class="btn btn-success" type="submit">Crear</button>
                <a class="btn btn-danger" asp-action="Index">Volver</a>
            </div>
        </form>
    </div>
</div>