@using Application.ViewModels.Asignaciones
@model List<AsignacionesDetailsViewModel>
@{
    ViewData["Title"] = "Asignaciones";
}

<head>
    <link rel="stylesheet" href="~/css/listaAsignaciones.css" />
</head>

<div class="crearbtn">
    <form asp-controller="Asignaciones" asp-action="EditAsign" method="get">
        <input name="id" value="0" type="hidden" />
        <input name="ModoEditar" value="false" type="hidden" />
        <button class="btn btn-primary" type="submit">➕ Nueva Asignación</button>
    </form>
</div>

<div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @try
        {
            if (Model != null && Model.Any())
            {
                @foreach (var obj in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-header">
                                📋 Asignación #@obj.AsignacionId
                            </div>
                            <div class="card-body">
                                <div class="info-row">
                                    <span class="info-icon">🛣️</span>
                                    <p>
                                        <strong>Ruta:</strong>
                                        <span class="@(string.IsNullOrEmpty(obj.NombreRuta) ? "ninguno-info" : "ruta-info")">
                                            @(obj.NombreRuta ?? "Ninguna")
                                        </span>
                                    </p>
                                </div>

                                @if (obj.HorarioId.HasValue)
                                {
                                    <div class="info-row">
                                        <span class="info-icon">⏰</span>
                                        @if (obj.DiaFin.Equals(obj.DiaInicio))
                                        {
                                            <p>
                                                <strong>Horario:</strong>
                                                <span class="horario-info">@obj.HoraSalida - @obj.HoraLlegada - @obj.DiaInicio</span>
                                            </p>
                                        }
                                        else
                                        {
                                            <p>
                                                <strong>Horario:</strong>
                                                <span class="horario-info">@obj.HoraSalida - @obj.HoraLlegada - @obj.DiaInicio a @obj.DiaFin</span>
                                            </p>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="info-row">
                                        <span class="info-icon">⏰</span>
                                        <p><strong>Horario:</strong> <span class="ninguno-info">Ninguno</span></p>
                                    </div>
                                }

                                <div class="info-row">
                                    <span class="info-icon">🚛</span>
                                    <p>
                                        <strong>Placa del Camión:</strong>
                                        <span class="@(string.IsNullOrEmpty(obj.PlacaCamion) ? "ninguno-info" : "camion-info")">
                                            @(obj.PlacaCamion ?? "Ninguno")
                                        </span>
                                    </p>
                                </div>

                                <div class="info-row">
                                    <span class="info-icon">👤</span>
                                    <p>
                                        <strong>Chofer:</strong>
                                        <span class="@(string.IsNullOrEmpty(obj.NombreChofer) ? "ninguno-info" : "chofer-info")">
                                            @(obj.NombreChofer ?? "Ninguno")
                                        </span>
                                    </p>
                                </div>

                                <div class="form-btn">
                                    <form asp-controller="Asignaciones" asp-action="EditAsign" method="get">
                                        <input type="hidden" name="Id" value="@obj.AsignacionId" />
                                        <input type="hidden" name="ModoEditar" value="true" />
                                        <button class="btn btn-warning" type="submit">✏️ Editar</button>
                                    </form>
                                    <form asp-controller="Asignaciones" asp-action="DeleteAsign" method="get">
                                        <input type="hidden" name="Id" value="@obj.AsignacionId" />
                                        <button class="btn btn-danger" type="submit">🗑️ Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="card">
                        <div class="card-body no-data">
                            <h2>📋 No se encontraron asignaciones</h2>
                            <p>¡Comienza creando tu primera asignación!</p>
                            <form asp-controller="Asignaciones" asp-action="EditAsign" method="get">
                                <input name="id" value="0" type="hidden" />
                                <input name="ModoEditar" value="false" type="hidden" />
                                <button class="btn btn-primary" type="submit">➕ Crear Primera Asignación</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        catch (Exception ex)
        {
            <div class="col-12">
                <div class="error-message">
                    <h2>❌ Error</h2>
                    <p>@ex.Message</p>
                </div>
            </div>
        }
    </div>
