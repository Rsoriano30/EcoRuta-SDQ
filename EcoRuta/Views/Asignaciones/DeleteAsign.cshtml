@using Application.ViewModels.Asignaciones
@model AsignacionesDetailsViewModel
@{
    ViewData["Title"] = "Borrar";
}

<head>
    <style>
        body {
        background-color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        }

        .delete-container {
        max-width: 500px;
        width: 100%;
        }

        .card {
        background-color: #fff5f5;
        border-radius: 12px;
        border: 1px solid #ffcdd2;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        overflow: hidden;
        transition: all 0.3s ease;
        }

        .card:hover {
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.15);
        transform: translateY(-2px);
        }

        .card-header {
        background-color: #ffebee;
        padding: 20px;
        border-bottom: 1px solid #ffcdd2;
        text-align: center;
        }

        .card-header h5 {
        margin: 0;
        font-size: 20px;
        font-weight: bold;
        color: #c62828;
        }

        .delete-icon {
        font-size: 48px;
        color: #e53935;
        margin-bottom: 15px;
        text-align: center;
        }

        .card-body {
        padding: 25px;
        }

        .card-body p {
        margin-bottom: 15px;
        font-size: 16px;
        padding: 8px 0;
        border-bottom: 1px solid #f5f5f5;
        }

        .card-body p:last-of-type {
        border-bottom: none;
        margin-bottom: 20px;
        }

        .card-body p strong {
        color: #1565C0;
        font-weight: 600;
        display: inline-block;
        min-width: 80px;
        }

        .info-value {
        color: #424242;
        }

        .ruta-info {
        color: #388E3C;
        font-weight: 500;
        }

        .horario-info {
        color: #F57C00;
        font-weight: 500;
        }

        .camion-info {
        color: #7B1FA2;
        font-weight: 500;
        }

        .chofer-info {
        color: #1976D2;
        font-weight: 500;
        }

        .form-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 25px;
        }

        .btn {
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 10px;
        border: none;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-weight: 500;
        min-width: 120px;
        }

        .btn-danger {
        background-color: #e53935;
        color: white;
        }

        .btn-danger:hover {
        background-color: #c62828;
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(229, 57, 53, 0.3);
        }

        .btn-warning {
        background-color: #fdd835;
        color: #000;
        }

        .btn-warning:hover {
        background-color: #fbc02d;
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(253, 216, 53, 0.3);
        }

        .no-data {
        text-align: center;
        color: #666;
        font-size: 18px;
        padding: 40px 20px;
        }

        .warning-text {
        background-color: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        color: #856404;
        font-size: 14px;
        text-align: center;
        }

        /* Responsive */
        @@media (max-width: 768px) {
        .form-buttons


        {
        flex-direction: column;
        }

        .btn {
        width: 100%;
        margin-bottom: 10px;
        }

        .card-body {
        padding: 20px;
        }

        }
    </style>
</head>

<body>
    <div class="delete-container">
        <div class="card">
            @if (Model != null)
            {
                <div class="delete-icon">⚠️</div>
                <div class="card-header">
                    <h5>¿Seguro que quieres borrar esta asignación?</h5>
                </div>
                <div class="card-body">
                    <div class="warning-text">
                        Esta acción no se puede deshacer. La asignación se eliminará permanentemente.
                    </div>

                    <p><strong>Ruta:</strong> <span class="ruta-info">@Model.NombreRuta</span></p>
                    <p><strong>Camión:</strong> <span class="camion-info">@Model.PlacaCamion</span></p>
                    <p><strong>Chofer:</strong> <span class="chofer-info">@Model.NombreChofer - @Model.CedulaChofer</span></p>
                    @if (Model.DiaInicio != null || Model.DiaFin != null)
                    {
                        @if (Model.DiaFin.Equals(Model.DiaInicio))
                        {
                            <p><strong>Horario:</strong> <span class="horario-info">@Model.HoraSalida - @Model.HoraLlegada - @Model.DiaInicio</span></p>
                        }
                        else
                        {
                            <p><strong>Horario:</strong> <span class="horario-info">@Model.HoraSalida - @Model.HoraLlegada - @Model.DiaInicio a @Model.DiaFin</span></p>
                        }
                    }
                    else
                    {
                        <p><strong>Horario: </strong></p>
                    }

                    <form asp-controller="Asignaciones" asp-action="DeleteAsignPost" method="post">
                        <input type="hidden" name="id" value="@Model.AsignacionId" />
                        <div class="form-buttons">
                            <button class="btn btn-danger" type="submit">Eliminar</button>
                            <a class="btn btn-warning" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
            }
            else
            {
                <div class="card-body">
                    <div class="no-data">
                        <h2>No se encontró la asignación</h2>
                        <p>La asignación que intenta eliminar no existe o ya fue eliminada.</p>
                        <a class="btn btn-warning" asp-action="Index">Volver a la lista</a>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
