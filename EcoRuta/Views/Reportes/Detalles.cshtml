@using Application.ViewModels.Reportes
@model ReporteViewModel

@{
    ViewData["Title"] = "Detalles";
    <link rel="stylesheet" href="~/css/responsive.css" />
}

<head>
    <style>
        
         body {
            background: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: white;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .card {
            background-color: #f4fef4;
            border-radius: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            padding: 30px;
            max-width: 500px;
            width: 100%;
            border: none;
        }

        .card p {
            margin-bottom: 15px;
            font-size: 1rem;
            color: black;
        }

        .btn {
            border-radius: 10px;
            padding: 10px 20px;
        }

        .btn-danger {
            background-color: #d9534f;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c9302c;
        }

        h2 {
            color: black;
        }

    </style>
</head>

<div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
            <div class="card">
                <div class="card-body">

                    @if (Model != null)
                    {
                        <p>Titulo: @Model.Titulo</p>
                        <p>Descripción: @Model.Descripcion</p>
                        <p>Estado: @Model.Estado</p>
                        <p>Fecha de creación: @Model.FechaHora </p>

                        @if (Model.Comentario != null && Model.Comentario != "Pendiente")
                        {
                            <P>Comentario: @Model.Comentario</P>
                        }
                        else if (Model.Estado == "Pendiente")
                        {
                            <p>Este reporte sigue pendiente</p>
                        }
                        else
                        {
                            <p><strong>No hay comentario</strong></p>
                        }

                        <a class="btn btn-danger" asp-action="Index">Volver</a>
                    }
                    else
                    {
                        <h2>No se encontró el Reporte</h2>
                    }
                </div>
            </div>
        </div>
    </div>
</div>