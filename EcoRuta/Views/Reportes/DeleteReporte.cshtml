@using Application.ViewModels.Reportes
@model ReporteViewModel

@{
    ViewData["Title"] = "Borrar";
    <link rel="stylesheet" href="~/css/responsive.css" />
}

<head>
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .main-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .card {
            background-color: #f4fef4;
            border-radius: 12px;
            border: 1px solid #c8e6c9;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            padding: 20px;
            width: 400px;
            margin: 100px auto;
            margin-top: 50px;
        }


        .card-header {
            background-color: transparent;
        }

            .card-header h5 {
                text-align: center;
                color: #d32f2f;
                margin-bottom: 20px;
            }

        .card-body p {
            margin: 10px 0;
            font-size: 15px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            border: none;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            text-decoration: none;
            flex: 1;
        }

        .btn-danger {
            background-color: #e53935;
            color: white;
            box-shadow: 0 4px 8px rgba(198, 40, 40, 0.3);
        }

            .btn-danger:hover {
                background-color: #c62828;
                transform: scale(1.05);
            }

        .btn-warning {
            background-color: #fdd835;
            color: #000;
            box-shadow: 0 4px 8px rgba(253, 216, 53, 0.3);
        }

            .btn-warning:hover {
                background-color: #fbc02d;
                transform: scale(1.05);
            }

    </style>
</head>

<body>
    <div class="main-wrapper">
        <div class="card">

            @if (Model != null)
            {
                @if (Model.Estado == "Pendiente")
                {
                    <div class="card-header">
                        <hS>¿Seguro que quieres borrar esta reporte?</hS>
                    </div>
                    <div class="card-body">

                        <p>Titulo: @Model.Titulo</p>
                        <p>Descripción: @Model.Descripcion</p>

                        <form asp-controller="Reportes" asp-action="DeleteReportePost" method="post">

                            <input type="hidden" name="Id" value="@Model.ReporteId" />
                            <button class="btn btn-danger" type="submit">Eliminar</button>
                            <a class="btn btn-warning" asp-action="Index">Cancelar</a>
                        </form>
                    </div>
                }
                else
                {
                    <div class="card-body">
                        <p>Este reporte ya no puede ser borrado</p>
                    </div>
                }
            }
            else
            {
                <div class="card-body">
                    <h2>No se encontró el reporte</h2>
                </div>
            }
        </div>
    </div>
</body>