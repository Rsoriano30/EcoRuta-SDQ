@model List<Application.ViewModels.Reportes.ReporteViewModel>

@{
    ViewData["Title"] = "Reportes";
    <link rel="stylesheet" href="~/css/site-responsive.css" />
}

<head>
    <style>
        body {
            background-color: #ffffff;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        .crearbtn {
            text-align: center;
            margin-top: 40px;
        }

            .crearbtn a {
                background-color: #4CAF50;
                color: white;
                border: none;
                padding: 12px 25px;
                text-decoration: none;
                border-radius: 10px;
                font-weight: bold;
                transition: background-color 0.3s;
            }

                .crearbtn a:hover {
                    background-color: #45a049;
                }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
            gap: 20px;
        }

        .card {
            background-color: #f4fef4;
            color: black;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 300px;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .form-btn {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            gap: 5px;
        }

        .btn {
            padding: 8px 15px;
            border-radius: 6px;
            font-size: 14px;
            
            text-align: center;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

        .btn-warning {
            background-color: #fdd835;
            color: white;
        }

            .btn-warning:hover {
                background-color: #fbc02d;
            }

        .btn-danger {
            background-color: #e53935;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c62828;
            }

        .btn-success {
            background-color: #5cb85c;
            color: white;
        }

            .btn-success:hover {
                background-color: #4cae4c;
            }

        .footer {
        margin-top: 100px;
        }

        h2 {
            color: black;
        }

    </style>
</head>

@if (User.IsInRole("Usuario"))
{
    <div class="crearbtn">
        <a class="btn btn-primary" asp-controller="Reportes" asp-action="CreateReporte">Nuevo Reporte</a>
    </div>
}

<div>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

        @try
        {
            if (Model != null)
            {
                @foreach (var obj in Model)
                {
                    <div class="col">
                        <div class="card">
                            <div class="card-body">

                                <p>Titulo: @obj.Titulo</p>
                                <p>Descripción: @obj.Descripcion</p>
                                <p>Estado: @obj.Estado</p>

                                <div class="form-btn">

                                    <a name="id" class="btn btn-secondary" asp-action="Detalles" asp-route-id="@obj.ReporteId">Detalles</a>

                                    @if(obj.Estado == "Pendiente" & User.IsInRole("Usuario"))
                                    {
                                        <a name="id" class="btn btn-warning" asp-action="EditReporte" asp-route-id="@obj.ReporteId">Editar</a>
                                        <a name="id" class="btn btn-danger" asp-action="DeleteReporte" asp-route-id="@obj.ReporteId">Eliminar</a>
                                    }
                                    else if (obj.Estado == "Pendiente" && User.IsInRole("Administrador"))
                                    {
                                        <a name="id" class="btn btn-success" asp-action="EditReporte" asp-route-id="@obj.ReporteId">Evaluar</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
			else
			{
				<h2>No se encontraron reportes.</h2>
			}

        }
        catch (Exception ex)
        {
            <h2>Error: @ex</h2>
        }
    </div>
</div>