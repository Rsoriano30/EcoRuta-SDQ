@using Application.ViewModels.Choferes
@model ChoferViewModel

@{
    ViewData["Title"] = "Eliminar Chofer";
}

<head>
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
        }

        .card {
            background-color: #f4fef4;
            border-radius: 12px;
            border: 1px solid #c8e6c9;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.08);
            padding: 20px;
            width: 400px;
            margin-top: 50px;
        }

        .card-header h5 {
            text-align: center;
            color: #d32f2f;
            margin-bottom: 20px;
        }

        .card-body p {
            margin: 10px 0;
            font-size: 15px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            border: none;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            text-decoration: none;
            flex: 1;
        }

        .btn-danger {
            background-color: #e53935;
            color: white;
            box-shadow: 0 4px 8px rgba(198, 40, 40, 0.3);
        }

            .btn-danger:hover {
                background-color: #c62828;
                transform: scale(1.05);
            }

        .btn-warning {
            background-color: #fdd835;
            color: #000;
            box-shadow: 0 4px 8px rgba(253, 216, 53, 0.3);
        }

            .btn-warning:hover {
                background-color: #fbc02d;
                transform: scale(1.05);
            }
    </style>
</head>

<div class="card">
    @if (Model != null)
    {
        <div class="card-header">
            <h5>¿Seguro que quieres borrar este chofer?</h5>
        </div>
        <div class="card-body">
            <p><strong>Nombre:</strong> @Model.Nombre</p>
            <p><strong>Cédula:</strong> @Model.Cedula</p>

            <form asp-controller="Choferes" asp-action="DeleteChoferPost" method="post">
                <input type="hidden" name="Id" value="@Model.ChoferId" />
                <div class="btn-container">
                    <button class="btn btn-danger" type="submit">Eliminar</button>
                    <a class="btn btn-warning" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="card-body">
            <h2 style="text-align: center;">No se encontró el chofer</h2>
        </div>
    }
</div>